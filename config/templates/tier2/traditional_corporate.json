    "specific_sacados_list": "{{POOL_SPECIFIC_SACADOS}}",
    "pool_specific_limits": "{{POOL_SPECIFIC_LIMITS}}",
    "special_amortization": "{{SPECIAL_AMORTIZATION}}",
