    {
      "id": "pdd",
      "tipo": "provisao",
      "ativo": true,
      "frequencia": "diaria",
      "prioridade": "alta",
      "corporate_pattern": "standard_pdd_monitoring",
      "campos_necessarios": [
        "dias_atraso",
        "valor_presente"
      ],
      "funcao_calculo": "calc_pdd"
    }
  ],
  "corporate_configurations": {
    "sacados_management": {
      "type": "curated_list",
      "validation_required": true,
      "minimum_count": "{{SACADOS_MIN_COUNT|default:15}}",
