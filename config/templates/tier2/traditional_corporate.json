        },
        {
          "tipo": "individual",
          "entidade": "cedente",
          "limite": "{{CONCENTRACAO_INDIVIDUAL_CEDENTE|default:0.30}}"
        },
        {
          "tipo": "top_n",
          "entidade": "sacado",
          "n": 10,
          "limite": "{{CONCENTRACAO_TOP10_SACADO|default:1.00}}"
        },
        {
          "tipo": "top_n",
          "entidade": "cedente",
          "n": 10,
          "limite": "{{CONCENTRACAO_TOP10_CEDENTE|default:0.70}}"
        }
      ],
      "campos_necessarios": [
        "sacado",
        "cedente",
        "valor_presente"
      ],
      "funcao_calculo": "calc_concentracao"
    },
    {
      "id": "inadimplencia_30d",
      "tipo": "inadimplencia",
      "ativo": true,
      "frequencia": "diaria",
      "prioridade": "alta",
      "corporate_pattern": "dual_timeframe_monitoring",
      "limites": {
        "prazo_dias": 30,
        "limite": "{{INADIMPLENCIA_30D|default:0.04}}"
      },
      "campos_necessarios": [
        "dias_atraso",
        "valor_presente"
      ],
      "funcao_calculo": "calc_inadimplencia"
    },
    {
      "id": "inadimplencia_90d",
      "tipo": "inadimplencia",
      "ativo": true,
      "frequencia": "diaria",
      "prioridade": "alta",
      "corporate_pattern": "dual_timeframe_monitoring",
      "limites": {
        "prazo_dias": 90,
        "limite": "{{INADIMPLENCIA_90D|default:0.02}}"
      },
      "campos_necessarios": [
        "dias_atraso",
        "valor_presente"
      ],
      "funcao_calculo": "calc_inadimplencia"
    },
    {
      "id": "vencimento_medio",
      "tipo": "prazo",
      "ativo": true,
      "frequencia": "diaria",
      "prioridade": "media",
      "corporate_pattern": "sophisticated_maturity_management",
      "limites": {
        "maximo_dias": "{{VENCIMENTO_MEDIO_MAXIMO|default:90}}",
        "ponderado_por_valor": true
      },
      "campos_necessarios": [
        "data_vencimento",
        "valor_presente"
      ],
      "funcao_calculo": "calc_vencimento_medio"
    },
    {
      "id": "criterios_ativos",
      "tipo": "elegibilidade",
      "ativo": true,
      "frequencia": "diaria",
      "prioridade": "alta",
      "corporate_pattern": "comprehensive_eligibility",
      "limites": {
        "valor_minimo": "{{CRITERIOS_VALOR_MINIMO|default:100.0}}",
        "vencimento_minimo_dias": "{{CRITERIOS_VENC_MINIMO|default:7}}",
        "vencimento_maximo_dias": "{{CRITERIOS_VENC_MAXIMO|default:180}}",
        "taxa_minima_cdi_mensal": "{{CRITERIOS_TAXA_MINIMA|default:1.50}}",
        "tipos_permitidos": "{{CRITERIOS_TIPOS_PERMITIDOS|default:[\"duplicata_mercantil\", \"duplicata_servico\"]}}",
        "performadas_obrigatorio": "{{CRITERIOS_PERFORMADAS|default:true}}"
      },
      "campos_necessarios": [
        "valor_presente",
        "data_vencimento",
        "taxa_cdi",
        "tipo_ativo"
      ],
      "funcao_calculo": "calc_criterios_elegibilidade"
