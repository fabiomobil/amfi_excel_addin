        "minimo": "{{SUBORDINACAO_MINIMO|default:0.25}}",
        "critico": "{{SUBORDINACAO_CRITICO|default:0.20}}",
        "calculo": "subordinada / (senior + subordinada)",
        "acao_violacao": "amortizacao_extraordinaria_primeira_serie",
        "prazo_cura_dias": "{{SUBORDINACAO_CURA_DIAS|default:5}}",
        "tipo_prazo": "{{SUBORDINACAO_CURA_TIPO|default:uteis}}"
