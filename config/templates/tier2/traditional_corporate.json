      "campos_necessarios": [
        "sr",
        "jr"
      ],
      "funcao_calculo": "calc_subordinacao"
    },
    {
      "id": "concentracao",
      "tipo": "concentracao",
      "ativo": true,
      "frequencia": "diaria",
      "prioridade": "alta",
      "corporate_pattern": "multi_entity_concentration",
      "limites": [
        {
          "tipo": "individual",
          "entidade": "sacado",
